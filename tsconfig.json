{
  "compilerOptions": {
    "target": "ES2021",                    
    "module": "CommonJS",                    
    "declaration": true,                    
    "declarationMap": true,                  
    "outDir": "dist",                        
    "rootDir": "src",                        
    "strict": true,                          
    "esModuleInterop": true,                  
    "skipLibCheck": true,                    
    "forceConsistentCasingInFileNames": true, 
    "sourceMap": true                         
  },
  "include": ["src/**/*"],                    
  "exclude": ["node_modules", "dist"]       
}
